<%= form_for([@journey, @claim]) do |f| %>
  <% if @claim.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@claim.errors.count, "error") %> prohibited this claim from being saved:</h2>

      <ul>
      <% @claim.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<%= f.hidden_field :points, :value => @journey.difficulty * 50 %>

<strong>Clues:</strong>
  <div class="row clue-container">
    <p><%= @journey.first_clue %><br><%= image_tag @journey.first_image_url %></p>
    <ul class="clue">

      <% for clue in @journey.clues %>
            <li class="clue-image"><%= clue.content %>
            <%= image_tag clue.image_url, class: "clue-image" %></li>
            <br>
      <% end %>
    </ul>
  </div>
  <button type="button" class="clues btn btn-primary">Show Next Clue</button>
  <div class="clue-container">
    <button type="button" class="found btn btn-primary">Found It!</button>
    <ul class="validation"><li class="final"><%= @journey.destination %><br><br>
    <%= image_tag @journey.validation_url %></li></ul>
  </div>
<% end %>

<script>
$('ul.clue > li.clue-image').hide();
$('button.clues').click(function() {
    $('ul.clue > li.clue-image:hidden:first').show();
});
$('ul.validation > li.final').hide();
$('button.found').click(function() {
    $('ul.validation > li.final:hidden:first').show();
});
</script>