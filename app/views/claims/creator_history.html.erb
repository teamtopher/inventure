<div class="center">
  <h2>Finished Journeys you Created</h2>
</div>

<table class="table table-striped table-bordered">
  <tr>
    <th class="center">Name</th>
    <th class="center">Journier</th>
    <th class="center">Journier's Answer</th>
    <th class="center">Date Completed</th>
  </tr>

  <% @claims.each do |claim| %>
    <tr>
      <!--<td class="center"><%= claim.journey.id %></td>-->
      <td class="center"><%= claim.explorer.email %></td>
      <td class="center"><%= claim.answer %></td>
      <td class="center"><%= claim.created_at.strftime("%B %-d, %Y") %></td>
    </tr>
  <% end %>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Journey', new_journey_path, class: "btn btn-link" %>
<% end %>