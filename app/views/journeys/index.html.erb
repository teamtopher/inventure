<p id="notice"><%= notice %></p>

<h1>Find Your Journey!</h1>
<div class="row">
  <div class="col-md-3">
    <% @journeys.each do |journey| %>
      <%= link_to journey do %>
        <%= image_tag journey.image_url(:thumb) if journey.image? %>
      <% end %>
       <div class="overlay">
          <h2><%= journey.name %></h2>
          <h2>Difficulty: <%= journey.difficulty %></h2>
        </div>
    <% end %>
  </div>
</div>

<br>

<%= link_to 'New Journey', new_journey_path %>
