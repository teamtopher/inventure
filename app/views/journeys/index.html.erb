<p id="notice"><%= notice %></p>

<h1 class="all">Find Your Journey!</h1>
<div class="row">
    <% @journeys.each do |journey| %>
      <div class="col-md-4">
        <%= link_to journey do %>
        <%= image_tag journey.image_url, class: "image" %>
        <div class="overlay">
          <h3><%= journey.name %></h3>
          <h4>Difficulty: <%= journey.difficulty %></h4>
        </div>
      <% end %>
      </div>

    <% end %>

<br>
</div>
<%= link_to 'New Journey', new_journey_path %>
