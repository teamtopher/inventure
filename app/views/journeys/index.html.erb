<div class="container">
<p id="notice"><%= notice %></p>

<h1 class="mobileheader">Explore</h1>

<br>
<br>
<div class="row">

<%= search_form_for @search do |f| %>
  <%= f.label :category_cont, "Choose a Category" %><br>
  <%= f.select :category_cont, options_for_category, :prompt => 'Select a category', class: "form-control" %>
  <br>
  <br>
<div class="actions">
  <%= f.submit "Filter", class: "form-control" %>
</div>
<% end %>
    <% @journeys.each do |journey| %>
      <div class="col-md-4">
        <%= link_to journey do %>
        <%= image_tag journey.first_image_url, class: "image" %>
        <div class="overlay">
          <h3><%= journey.name %></h3>
          <h4>Difficulty: <%= journey.difficulty %></h4>
          <h4>Category: <%= journey.category %></h4>

          <% if current_user == journey.user or current_user.try(:admin?) %>
             <h5><%= link_to 'Destroy', journey, method: :delete, data: { confirm: 'Are you sure?' } %></h5>
          <% end %>
        </div>
      <% end %>
      </div>

    <% end %>
</div>
<br>
</div>
</div>

